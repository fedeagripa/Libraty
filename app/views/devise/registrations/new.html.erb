<div class="container">
  <div class="col-xs-6 col-xs-offset-3">
    <h2 class="col-xs-11 col-xs-offset-1 "><b>Join The Library </b></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-xs-8 style-4">
          <%= f.text_field :first_name, autofocus: true,:placeholder => "Name", :class => "underline-session" %>
        </div>

        <div class="col-xs-8 style-4">
          <%= f.email_field :email, autofocus: true,:placeholder => "Email", :class => "underline-session" %>
        </div>

        <div class="col-xs-8 style-4"">
          <%= f.password_field :password, autocomplete: "off",:placeholder => "Password", :class => "underline-session" %>
        </div>

        <div class="col-xs-8 style-4"">
          <%= f.password_field :password_confirmation, autocomplete: "off",:placeholder => "Confirm Password", :class => "underline-session" %>
        </div>

        <div class="col-xs-2 col-xs-offset-3 actions">
          </br>
          </br>
          <%= f.submit "Sign up",:class => "sign-in" %>
        </div>
        <div class="col-xs-10 col-xs-offset-2">
          </br>
          <%= link_to "I already have an account", new_user_session_path,:class => "black" %>
        </div>
      <% end %>
    </div>
</div>

