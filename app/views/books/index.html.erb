<p id="notice"><%= notice %></p>
<div class="container">
<center> <h2> Books on the library </h2> </center>

<table class="table table-striped table-hover" style = "margin:auto;width:auto">
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= link_to "#{book.author.first_name} #{book.author.last_name}", book.author %></td>
        <td><%= book.year.to_time.strftime('%Y') %></td>
        <!--<td><%= link_to 'Show', book, :class => "btn btn-info" %></td>-->
        <!--<td><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-warning" %></td>-->
        <td><%= link_to 'Request', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
