<p id="notice"><%= notice %></p>
<div class="container">
<center> <h2> Books on the library </h2> </center>

<table class="table table-striped table-hover" style = "margin:auto;width:auto">
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, [book.author, book],:class => "black"%></td>
        <td>
          <%= link_to "#{book.author.first_name} #{book.author.last_name}", book.author, :class => "light" %>
        </td>
        <td><%= book.year.to_time.strftime('%Y')%></td>

        <td><%= link_to 'Request', bookings_path, :class => "under" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
