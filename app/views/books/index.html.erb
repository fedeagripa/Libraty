<p id="notice"><%= notice %></p>
<div class="container">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th> Title </th>
      <th> Release Date </th>
      <th> ISBN </th>
      <th> Author </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year.to_time.strftime('%A, %b %d') %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to book.author.first_name, book.author, :class => "btn btn-default" %></td>
        <td><%= link_to 'Show', book, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, :class => "btn btn-success", :style => "float:right" %>
</div>
